#!/bin/bash

DATADIR=$(cd $(dirname $0) && pwd -P)/data-9.4
NAME=postgres94

mkdir -p $DATADIR

if [[ $(docker ps -aq --filter name=$NAME --filter status=running) != "" ]]; then
  echo "Container $NAME is already running."
elif [[ $(docker ps -aq --filter name=$NAME --filter status=exited) != "" ]]; then
  echo "Starting container $NAME ..."
  docker start $NAME
else
  echo "Creating and starting container $NAME ..."
  docker run -d --name postgres94 -v $DATADIR:/var/lib/postgresql/data -p 5432:5432 -e POSTGRES_PASSWORD=root postgres:9.4
fi
echo "Postgres running at postgres://postgres:root@localhost"
